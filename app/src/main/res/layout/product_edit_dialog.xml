<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="22sp"
            android:textColor="@color/blue_dark_1"
            android:layout_marginTop="50dp"/>
        <EditText
            android:id="@+id/productNameEditText"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:textSize="22sp"
            android:textColor="@color/blue_dark_1"
            android:layout_marginStart="80dp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/productSizeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size:"
            android:textColor="@color/blue_dark_2"
            android:textSize="18sp"
            android:layout_marginTop="100dp"/>
        <EditText
            android:id="@+id/productSize"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:textColor="@color/blue_dark_2"
            android:layout_marginStart="80dp"
            android:layout_marginTop="100dp"/>

        <TextView
            android:id="@+id/productAmountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount: "
            android:textSize="18sp"
            android:textColor="@color/blue_dark_2"
            android:layout_marginTop="150dp"/>
        <EditText
            android:id="@+id/productAmount"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:textColor="@color/blue_dark_2"
            android:layout_marginStart="80dp"
            android:layout_marginTop="150dp"/>

        <TextView
            android:id="@+id/productPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price:"
            android:textSize="18sp"
            android:textColor="@color/blue_dark_2"
            android:layout_marginTop="200dp"/>
        <EditText
            android:id="@+id/productPrice"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:textColor="@color/blue_dark_2"
            android:layout_marginStart="80dp"
            android:layout_marginTop="200dp"/>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_navigation"
            android:text="Save"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_marginStart="30sp"
            android:layout_marginTop="250dp"/>

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_cancel"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_marginStart="200sp"
            android:layout_marginTop="250dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>