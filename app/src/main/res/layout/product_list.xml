<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/productName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Name"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/blue_dark_1"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/productSizeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/productName"
        android:text="Size: "
        android:textSize="18sp"
        android:textColor="@color/blue_dark_2"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/productSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/productName"
        android:text="Size"
        android:textSize="18sp"
        android:textColor="@color/blue_dark_2"
        android:layout_marginStart="50dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/productAmountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/productName"
        android:text="Amount: "
        android:textSize="18sp"
        android:textColor="@color/blue_dark_2"
        android:layout_marginStart="150dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/productAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/productName"
        android:text="Amount"
        android:textSize="18sp"
        android:textColor="@color/blue_dark_2"
        android:layout_marginStart="230dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/productPriceText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/productAmount"
        android:text="Price:"
        android:textSize="18sp"
        android:textColor="@color/blue_dark_2"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/productPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/productAmount"
        android:text="Price"
        android:textSize="18sp"
        android:textColor="@color/blue_dark_2"
        android:layout_marginStart="50dp"/>

    <View style="@style/ListDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/empEmployeeAddress"
        android:layout_marginTop="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>